<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Title>Robokassa payment</Title>
        <Authors>oldhowl</Authors>
        <Description>Robokassa payment implementation (with Robocheki)</Description>
        <PackageProjectUrl>https://github.com/oldhowl/Robokassa.NET</PackageProjectUrl>
        <PackageVersion>1.1.2</PackageVersion>
        <PackageIcon>icon.png</PackageIcon>
        <PackageIconUrl>images\icon.png</PackageIconUrl>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

    <ItemGroup>
        <None Include="images\icon.png" Pack="true" PackagePath="" />
    </ItemGroup>
</Project>
